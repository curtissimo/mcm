{{> top}}
<div class="member-page">
  <div class="menu">
  {{{menu}}}
  </div>
  <div class="content pure-g">
    <div class="pure-u-1 pure-u-sm-1-4 member-info">
      {{#if m.photoPath}}
        <div class="member-photo">
          <img src="{{m.photoPath}}" class="pure-img">
        </div>
      {{else}}
        <div class="member-photo">
          <img src="{{unknownMemberPath}}" class="pure-img">
        </div>
      {{/if}}
      <div class="private-member-info">
        {{#if showPrivateInformation}}
        <div class="private-member-info-hog">HOG: {{m.hogNumber}}</div>
        <div class="private-member-info-local-membership">
          Chapter membership:
          {{formatDate m.localMembership.startedOn "MM/YY"}}
          -
          {{formatDate m.localMembership.expiresOn "MM/YY"}}
        </div>
        <div class="private-member-info-national-membership">
          National membership:
          {{formatDate m.nationalMembership.startedOn "MM/YY"}}
          -
          {{formatDate m.nationalMembership.expiresOn "MM/YY"}}
        </div>
        {{/if}}
      </div>
    </div>
    <div class="pure-u-1 pure-u-sm-3-4">
      {{#if m.nickName}}
        <h1 class="member-info-full-name">{{m.firstName}} "{{m.nickName}}" {{m.lastName}}</h1>
      {{else}}
        <h1 class="member-info-full-name">{{m.firstName}} {{m.lastName}}</h1>
      {{/if}}
    </div>
  </div>
  <div class="footer">
  {{{footer}}}
  </div>
</div>
{{> bottom}}
