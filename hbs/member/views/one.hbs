{{> top}}
<div class="member-page">
  <div class="menu">
  {{{menu}}}
  </div>
  <div class="content pure-g">
    <div class="pure-u-1 pure-u-sm-1-5 member-info">
      {{#if m.photoPath}}
        <div class="member-photo">
          <img src="{{m.photoPath}}" class="pure-img">
        </div>
      {{else}}
        <div class="member-photo">
          <img src="{{unknownMemberPath}}" class="pure-img">
        </div>
      {{/if}}
      <div>
        {{#with m}}
          {{#if ../user.privileges.canModifyMembers}}
          HOG: {{hogNumber}}<br>
          {{/if}}
        {{/with}}
      </div>
    </div>
    <div class="pure-u-1 pure-u-sm-4-5">
      <h1 class="member-info-full-name">{{m.firstName}} "{{m.nickName}}" {{m.lastName}}</h1>
    </div>
  </div>
  <div class="footer">
  {{{footer}}}
  </div>
</div>
{{> bottom}}
