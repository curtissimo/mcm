{{> top}}
<div class="member-page">
  <div class="menu">
  {{{menu}}}
  </div>
  <div class="content">
    <div class="member-search pure-form">
      <input type="text" placeholder="filter names">
    </div>
    <div class="pure-g">
      {{#each members}}
        <div class="pure-u-1 pure-u-lg-1-3 pure-u-md-1-2" data-url="{{memberUrl}}">
          <div class="member">
            {{#if photoPath}}
              <div class="member-photo">
                <img src="{{photoPath}}" class="pure-img">
              </div>
            {{else}}
              <div class="member-photo">
                <img src="{{../../unknownMemberPath}}" class="pure-img">
              </div>
            {{/if}}
            <div class="member-firstName">
              {{firstName}}
            </div>
            {{#if nickName}}
              <div class="member-nickName">
                {{nickName}}
              </div>
            {{/if}}
            <div class="member-lastName">
              {{lastName}}
            </div>
            {{#if email}}
              <div class="member-email">
                <a href="mailto:{{email}}">{{email}}</a>
              </div>
            {{/if}}
            {{#if phone}}
              <div class="member-phone">
                {{phone}}
              </div>
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="footer">
  {{{footer}}}
  </div>
</div>
{{> bottom}}
