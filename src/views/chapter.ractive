<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width, inital-scale=1, maximum-scale=1">
    {{#stylesheets}}
    <link rel="stylesheet" href="{{.}}">
    {{/stylesheets}}
    {{{ ifltie9 }}}
    <script src="/scripts/shiv.js"></script>
    {{{ endif }}}
  </head>
  <body>
    <div id="main-menu" class="main-menu">
    {{{ menu }}}
    </div>
    <div id="main-toolbar" class="max-lg-screen toolbar">
      <div class="toolbar-section toolbar-left">
        <a href="#" class="toolbar-item" id="main-toolbar-show-menu"><i class="fa fa-bars"></i></a>
      </div>
      <div class="toolbar-section toolbar-center-side">
      </div>
      <div class="toolbar-section toolbar-right">
        {{#if actions}}
        <a class="toolbar-item" href="#"><i class="fa fa-ellipsis-v"></i></a>
        {{/if}}
      </div>
    </div>
    <div id="main-content">
      <div id="action-toolbar" class="min-lg-screen toolbar">
        {{#if actions}}
          <div class="toolbar-section toolbar-left"></div>
          <div class="toolbar-section toolbar-center-side"></div>
          <div class="toolbar-section toolbar-right">
            {{#actions:url}}
            <a class="toolbar-item pure-button" href="{{ . }}">{{ @key }}</a>
            {{/actions}}
          </div>
        {{else}}
          <div class="toolbar-section">
            <div class="pure-button pure-button-disabled normal-cursor">{{{ '&nbsp;' }}}</div>
          </div>
        {{/if}}
      </div>
      {{{ content }}}
    </div>
    <div id="debug">
      <div class="is-xs-screen">tiny</div>
      <div class="is-sm-screen">small</div>
      <div class="is-md-screen">medium</div>
      <div class="is-lg-screen">large</div>
      <div class="is-xl-screen">extra large</div>
      {{#member}}
      <div>{{ member.email }}</div>
      {{/member}}
    </div>
    <div id="overlay"></div>
    <script src="/scripts/app.js"></script>
  </body>
</html>
